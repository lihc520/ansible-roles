[Unit]
Description=The PHP FastCGI Process Manager
Documentation=http://php.net/docs.php
After=network.target

[Service]
Type=simple
PIDFile={{ php_root_dir }}/var/run/php-fpm.pid
ExecStart={{ php_root_dir }}/sbin/php-fpm --nodaemonize --fpm-config {{ php_root_dir }}/etc/php-fpm.conf
ExecReload=/bin/kill -USR2 $MAINPID
LimitNOFILE=1000000
LimitNPROC=1000000
LimitCORE=1000000

[Install]
WantedBy=multi-user.target
